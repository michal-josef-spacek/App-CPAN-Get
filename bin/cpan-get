#!/usr/bin/env perl

use strict;
use warnings;

use App::CPAN::Get;

our $VERSION = 0.01;

# Run.
exit App::CPAN::Get->new->run;

# Print version.
sub VERSION_MESSAGE {
	print $VERSION."\n";
	exit 0;
}

__END__

=pod

=encoding utf8

=head1 NAME

cpan-get - Script to get from CPAN archive.

=head1 SYNOPSIS

 cpan-get [-h] [--version] module_name

=head1 ARGUMENTS

=over 8

=item * C<-h>

 Print help.

=item * C<--version>

 Print version of script.

=item * C<module_name>

 Perl module name.
 e.g. Module::Install

=back

=head1 EXAMPLE

 cpan-get Module::Install

